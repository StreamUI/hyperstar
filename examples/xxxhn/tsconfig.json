{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "declaration": true,
    "types": ["@types/bun"],
    "jsx": "react-jsx",
    "jsxImportSource": "hyperstar"
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
